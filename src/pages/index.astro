---
import { Icon } from 'astro-iconify';
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import TimeLineElement from "../components/cv/TimeLine.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const last_posts = posts.slice(0, 3);
---

<BaseLayout>

    <div class="pb-12 mt-5">
      <div class="text-5xl font-bold">Kohei Honda</div>
      <!-- <div class="text-3xl py-3 font-bold">Ph.D. student</div> -->
      <div class="py-2">
        <text class="text-lg">
          I am a Ph.D. candidate at Nagoya University, Japan, specializing in the fields of motion planning, control, and SLAM for intelligent mobile robotics. 
          My research focuses on developing advanced techniques such as model predictive control, reinforcement learning, and the integration of model-based and learning-based approaches. 
        </text>
      </div>
      <div class="py-2">
          <Icon name="material-symbols:work", class="inline-block w-6 h-6" /> <text class="text-lg"><a href="https://www.suzlab.mae.nagoya-u.ac.jp/en/" target="_blank">Mobility System Group, Nagoya University</a></text><br />
          <Icon name="material-symbols:mail", class="inline-block w-6 h-6" /> <text class="text-lg">honda.kohei.b0[at]s.mail.nagoya-u.ac.jp ([at] -> @)</text> <br />
          <Icon name="mdi:location", class="inline-block w-6 h-6" /> <text class="text-lg">Nagoya, Japan</text> <br />
        </div>
      </div>
    </div>

    <div class="mb-5">
      <div class="text-3xl w-full font-bold">Education</div>
    </div>
  
    <div class="time-line-container grid gap-4 mb-10">
      <TimeLineElement
        title="Ph.D. Candidate in Engineering, Nagoya University, Japan"
        subtitle="2021 - present, Advisor: Prof. Tatsuya Suzuki, Dept. Mechanical System Engineering"
      />
      <TimeLineElement
        title="M.S. in Engineering, Nagoya University, Japan"
        subtitle="2019 - 2021, Advisor: Prof. Tatsuya Suzuki, Dept. Mechanical System Engineering"
      />
      <TimeLineElement
        title="B.S. in Engineering (GPA: 3.75/4.0), Nagoya University, Japan"
        subtitle="2014 - 2019, Advisor: Prof. Yoshifumi Morita, Dept. Electrical and electronic engineering"
      />
    </div>

    <div class="mb-5">
      <div class="text-3xl w-full font-bold">Experience</div>
    </div>
  
    <div class="time-line-container mb-10">
      <TimeLineElement
        title="Research Fellow for Young Scientists (DC2), Japan Society for Promotion of Science"
        subtitle="Apr. 2023 - Present, Japan"
        desc="Research fellowship and grant on Automatic Generation of MPCs for Autonomous Driving"
      />
      <TimeLineElement
        title="Research Assistant @Nagoya University"
        subtitle="Apr. 2021 - May. 2023, Japan"
        desc="Joint research project with J-QuAD DYNAMICS, Inc."
      />
      <TimeLineElement
        title="Research Internship @OMRON SINIC X Corp."
        subtitle="Jul. 2022 - Mar. 2023, Japan"
        desc="Research on an adaptive replanning strategy for autonomous mobile robots using Deep RL"
        url="https://www.omron.com/sinicx/en/"
      />
      <TimeLineElement
        title="Research Internship @Smart Mobility Research Team, National Institute of Advanced Industrial Science and Technology"
        subtitle="Jan. 2021 - Mar. 2021, Japan"
        desc="Research on 3D LiDAR odometry estimation with trainable local geometric features"
        url="https://unit.aist.go.jp/digiarc/smrt/"
      />
      <TimeLineElement
        title="Part-time Software Engineer @MapIV, Inc."
        subtitle="Sept. 2019 - Apr. 2021, Japan"
        desc="Develop a 3D mapping system and Implement autonomous driving vehicles using Autoware"
        url="https://www.map4.jp/"
      />
    </div>

    <div class="mb-5">
      <div class="text-3xl w-full font-bold">Awards</div>
    </div>

    <div class="mb-5">
      <div class="text-3xl w-full font-bold">Grants</div>
    </div>

    <div class="mb-5">
      <div class="text-3xl w-full font-bold">Skills</div>
    </div>
  
